# docker/Dockerfile.api
FROM python:3.11-slim

WORKDIR /app

# Install API deps (without torch)
COPY api/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Install CPU-only PyTorch from the official CPU wheel index
RUN pip install --no-cache-dir --extra-index-url https://download.pytorch.org/whl/cpu torch==2.3.1

# Copy model and API code
COPY model ./model
COPY api ./api

EXPOSE 8000

CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
